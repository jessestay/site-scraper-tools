{
  "manifest_version": 3,
  "name": "Site Scraper",
  "version": "1.0",
  "description": "Scrapes websites and saves them as static HTML",
  "permissions": [
    "downloads",
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
} 